pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/aryanmantoo/FEND.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('flask-app:latest')
                }
            }
        }
        stage('Run Tests') {
            steps {
                sh 'pytest tests/'
            }
        }
        stage('Deploy to Vercel') {
            steps {
                sh 'vercel --prod'
            }
        }
    }
}
